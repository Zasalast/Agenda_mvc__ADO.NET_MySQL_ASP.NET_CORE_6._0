<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agenda_mvc__ADO.NET_MySQL_ASP.NET_CORE_6._0</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Agenda_mvc__ADO.NET_MySQL_ASP.NET_CORE_6._0.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @{
            var routes = new[]
            {
        new { Name = "DetallesAgendamiento", Pattern = "Agendamiento/Details/{id}" },
        new { Name = "CreateAgendamiento", Pattern = "Agendamiento/Create" },
        new { Name = "EditarAgendamiento", Pattern = "Agendamiento/Edit/{id}" },
        new { Name = "EliminarAgendamiento", Pattern = "Agendamiento/Delete/{id}" },
        new { Name = "Index", Pattern = "Agendamiento" }, new { Name = "Detalles Agenda", Pattern = "Agenda/Details/{id}" },
        new { Name = "CrearAgenda", Pattern = "Agenda/Create" },
        new { Name = "EditarAgenda", Pattern = "Agenda/Edit/{id}" },
        new { Name = "ListaAgenda", Pattern = "Agenda/List" },
        new { Name = "EliminarAgenda", Pattern = "Agenda/Delete/{id}" },
        new { Name = "IndexAgenda", Pattern = "Agenda" }
        };
        }
     
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Agenda_mvc__ADO.NET_MySQL_ASP.NET_CORE_6._0</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                     
                        @foreach (var route in routes)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Agendamiento" asp-action="@route.Name">@route.Name</a>
                            </li>
                        }

                        }<!-- Navigation for AgendaController -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Agenda" asp-action="Index">Index Agenda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Agenda" asp-action="Crear">Crear Agenda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Agenda" asp-action="Eliminar">Eliminar Agenda</a>
                        </li>

                        <!-- Navigation for ReservasController (assuming the controller name is ReservasController) -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Reservas" asp-action="Index">Index Reservas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Reservas" asp-action="Crear">Crear Reserva</a>
                        </li>
                        <!-- Add more navigation items for other ReservasController actions as needed -->

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Agenda_mvc__ADO.NET_MySQL_ASP.NET_CORE_6._0 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
